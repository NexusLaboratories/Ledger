default_platform(:android)

platform :android do
  desc "Build and deploy to F-Droid"
  lane :deploy do
    # F-Droid builds are handled by F-Droid infrastructure
    # This lane can be used for local testing or other CI/CD purposes
    gradle(
      task: "clean assembleRelease",
      project_dir: "android/"
    )
  end

  desc "Run tests"
  lane :test do
    # Run Flutter tests
    sh "cd .. && flutter test"
  end

  desc "Build debug APK"
  lane :debug do
    gradle(
      task: "clean assembleDebug",
      project_dir: "android/"
    )
  end
end
